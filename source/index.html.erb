<%= partial "navbar" %>

<div class="orbit-bg">

  <div class="row index">

      <ul data-orbit data-options="animation: slide;
                                    timer_speed: 5000;
                                 animation_speed: 500;
                                        bullets: true;
                                  slide_number: false;
                                  next_on_click: true;
                             resume_on_mouseout: true;
                                       bullets: false;">


        <% [4, 10, 21, 29, 36, 80].each do |n| %>
