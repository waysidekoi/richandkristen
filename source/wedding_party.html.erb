---
title: Rich & Kristen
---
<%= partial "navbar" %>

<div class="row border">
</div>

<div class="row girls wed-party">

  <br />
  <h2>The Bridesmaids</h2>

  <dl class="sub-nav">

  <% data.bridesmaids.each_with_index do |f, index| %>
    <dd <%= index.zero? ? "class='active'" : nil %>>
      <a data-orbit-link="g<%= index %>"><%= f.first_name %></a>
    </dd>
  <% end %>

  </dl>

</div>

<div class="row wed-party">
  <ul id="girls" data-orbit data-options="timer_speed: 25000;
                            pause_on_hover: true;
                            slide_number: false;
                            next_on_click: false;
                            timer_show_progress_bar: false;
                            bullets: false;
                            resume_on_mouseout: false;">

    <% data.bridesmaids.each_with_index do |f, index| %>
    <li data-orbit-slide="g<%= index %>">
      <div class="small-3 columns <%= f.css_class %>"></div>
      <div class="small-8 columns">
        <h4><%= f.full_name %></h4>
        <p><%= f.bio.gsub("\n","<br/><br/>") %></p>
      </div>
    </li>
    <% end %>
  </ul>

</div>

<div class="row gw wed-party">
  <h2>The Groomswomen</h2>
  <dl class="sub-nav">
