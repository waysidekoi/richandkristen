  <dl class="sub-nav">
  <% data.groomsmen.each_with_index do |f, index| %>
    <dd <%= index.zero? ? "class='active'" : nil %>>
      <a data-orbit-link="b<%= index %>"><%= f.first_name %></a>
    </dd>
  <% end %>
  </dl>
